{
    "rules": {
        "no-var-keyword": true,
        "triple-equals": true,
        "semicolon": [true, "always"],
        "max-line-length": [true, 100],
        "eofline": true,
        "no-shadowed-variable": true,
        "variable-name": [
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "prefer-const": true,
        "interface-over-type-literal": true,
        "only-arrow-functions": [
            true,
            "allow-named-functions"
        ],
        "no-invalid-template-strings": true
    }
}